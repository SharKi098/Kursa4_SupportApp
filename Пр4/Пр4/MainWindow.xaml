        <Button x:Name="LoginWindow" Content="Авторизация" VerticalAlignment="Center" Height="34" Width="161" Grid.Column="6" Click="LoginWindow_Click" Background="#FF90DCE2" Grid.ColumnSpan="2" RenderTransformOrigin="1,0.5" BorderBrush="#FF000004" Foreground="Black" FontWeight="Bold" FontFamily="Century Gothic" HorizontalAlignment="Center" Margin="40,0,0,0">

        </Button>

    </Grid>
</Window>
