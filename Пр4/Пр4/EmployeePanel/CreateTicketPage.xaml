<Page x:Class="Пр4.CreateTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Пр4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTicketPage" Background="#FF828282">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Создание запроса" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Заголовок" Margin="0,10,0,0"/>
            <TextBox x:Name="TitleTextBox" Width="300"/>
            <TextBlock Text="Описание проблемы" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Height="100" AcceptsReturn="True"/>
            <Button Content="Создать запрос" Margin="0,20,0,0" Width="120"/>
        </StackPanel>
    </Grid>
</Page>
