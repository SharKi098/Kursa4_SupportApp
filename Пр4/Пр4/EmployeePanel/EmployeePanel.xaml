<Window x:Class="Пр4.EmployeePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пр4"
        mc:Ignorable="d"
        Title="EmployeePanel" Height="450" Width="800">
    <Grid>
        <!-- Панель навигации -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="Личный кабинет" Margin="5" Click="NavigateToPersonalAccount"/>
            <Button Content="Создать запрос" Margin="5" Click="NavigateToCreateTicket"/>
            <Button Content="Отслеживание запросов" Margin="5" Click="NavigateToTrackTickets"/>
            <Button Content="Оценка качества" Margin="5" Click="NavigateToRating"/>
        </StackPanel>

        <!-- Контейнер для отображения страниц -->
        <Frame x:Name="MainFrame" Margin="10,50,10,10" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
