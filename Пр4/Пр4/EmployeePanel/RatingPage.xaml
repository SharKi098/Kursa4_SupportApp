<Page x:Class="Пр4.RatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Пр4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RatingPage">

    <Grid Background="#FF6B6767">
        <StackPanel Margin="10">
            <TextBlock Text="Оценка качества обслуживания" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Оцените качество обслуживания:" Margin="0,10,0,0"/>
            <ComboBox x:Name="RatingComboBox" Width="100" Margin="0,10,0,0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
            <Button Content="Отправить оценку" Margin="0,20,0,0" Width="120"/>
        </StackPanel>
    </Grid>
</Page>
