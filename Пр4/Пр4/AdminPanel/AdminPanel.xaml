<Window x:Class="Пр4.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пр4"
        mc:Ignorable="d"
        Title="Панель Администратора" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="Управление запросами" Margin="5" Click="NavigateToTickets"/>
            <Button Content="Управление сотрудниками" Margin="5" Click="NavigateToEmployees"/>
            <Button Content="Настройки" Margin="5" Click="NavigateToSettings"/>
        </StackPanel>

        
        <Frame x:Name="AdminFrame" Margin="10,50,10,10" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
